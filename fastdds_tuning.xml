<?xml version="1.0" encoding="UTF-8" ?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <profiles>
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>shm_transport</transport_id>
                <type>SHM</type>
                <maxMessageSize>65536</maxMessageSize>
            </transport_descriptor>
        </transport_descriptors>

        <participant profile_name="default_participant" is_default_profile="true">
            <rtps>
                <name>SensorSystemNode</name>
                <userTransports>
                    <transport_id>shm_transport</transport_id>
                </userTransports>
                <useBuiltinTransports>true</useBuiltinTransports>
                
                <sendSocketBufferSize>1048576</sendSocketBufferSize>
                <listenSocketBufferSize>4194304</listenSocketBufferSize>
            </rtps>
        </participant>

        <data_writer profile_name="default_writer" is_default_profile="true">
            <historyMemoryPolicy>PREALLOCATED_WITH_REALLOC</historyMemoryPolicy>
            <qos>
                <publishMode>
                    <kind>ASYNCHRONOUS</kind>
                </publishMode>
                <reliability>
                    <kind>BEST_EFFORT</kind>
                </reliability>
            </qos>
        </data_writer>

        <data_reader profile_name="default_reader" is_default_profile="true">
            <historyMemoryPolicy>PREALLOCATED_WITH_REALLOC</historyMemoryPolicy>
            <qos>
                <reliability>
                    <kind>BEST_EFFORT</kind>
                </reliability>
            </qos>
        </data_reader>
    </profiles>
</dds>